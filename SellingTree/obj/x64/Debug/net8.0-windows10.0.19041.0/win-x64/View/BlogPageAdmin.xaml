<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SellingTree.View.BlogPageAdmin"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SellingTree.Model"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <!-- Bao toàn bộ nội dung trong ScrollViewer -->
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <!-- ListView -->
                <RowDefinition Height="Auto" />
                <!-- TextBlock -->
                <RowDefinition Height="Auto" />
                <!-- RichEditBox -->
                <RowDefinition Height="Auto" />
                <!-- Button -->
            </Grid.RowDefinitions>

            <!-- ListView -->
            <ListView x:ConnectionId='2' x:Name="Control4"
                  Margin="0,10,0,0"
                  Grid.Row="0"
                  BorderThickness="1"
                  BorderBrush="{ThemeResource ControlStrongStrokeColorDefaultBrush}"
                  Background="WhiteSmoke">
                <ListView.ItemTemplate>
                    <DataTemplate                        >
                        <Border x:ConnectionId='5' BorderBrush="SlateGray" 
                            BorderThickness="0,0,0,3" 
                            Padding="0,10,0,10">
                            <Grid x:ConnectionId='6' Margin="0,12,0,12" 
                                                                    >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" MinWidth="100" MaxWidth="150"/>
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Border
                            BorderBrush="SlateGray" 
                            BorderThickness="2" 
                            Padding="0,0,0,0"
                            CornerRadius="24">
                                    <Image x:ConnectionId='12'                                 MaxHeight="120" MaxWidth="150" Stretch="Fill"/>
                                </Border>
                                <StackPanel Margin="24,0,0,0" 
                                        Grid.Column="1" 
                                        BorderBrush="LawnGreen"
                                        BorderThickness="2,0,0,0"
                                        Padding="16,0,0,0">
                                    <!-- Sử dụng TextFillColorPrimaryBrush cho các TextBlock -->
                                    <TextBlock x:ConnectionId='7'                       
                                       Style="{ThemeResource TitleTextBlockStyle}"
                                       Foreground="Black"
                                       HorizontalAlignment="Left" Margin="0,0,0,6" LineHeight="20"/>

                                    <TextBlock x:ConnectionId='8'                             FontFamily="Segoe UI" FontWeight="Normal"
                                    Style="{ThemeResource BodyTextBlockStyle}"
                                    Foreground="Black"
                                    TextTrimming="CharacterEllipsis" MaxLines="2" TextWrapping="WrapWholeWords" MaxWidth="800"
                                    Margin="0,0,0,16"
                                    x:Name="DescriptionTextBlock"/>

                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock x:ConnectionId='10'                        Style="{ThemeResource CaptionTextBlockStyle}"
                                        Foreground="{ThemeResource AccentFillColorSelectedTextBackgroundBrush}"
                                        FontWeight="Bold"/>
                                        <TextBlock  Text=" Views " Style="{ThemeResource CaptionTextBlockStyle}"
                                        Foreground="Black"
                                        FontWeight="Bold"/>
                                        <TextBlock  Text=" ⋅ " Style="{ThemeResource CaptionTextBlockStyle}"
                                        Foreground="Black"
                                        FontWeight="Bold"
                                        FontSize="16"/>
                                        <TextBlock x:ConnectionId='11'                        Style="{ThemeResource CaptionTextBlockStyle}"
                                        Foreground="{ThemeResource AccentFillColorSelectedTextBackgroundBrush}" Margin="5,0,0,0"
                                        FontWeight="Bold"/>
                                        <TextBlock  Text=" Likes" Style="{ThemeResource CaptionTextBlockStyle}"
                                        Foreground="Black"
                                        FontWeight="Bold"/>
                                    </StackPanel>
                                    <Button x:ConnectionId='9' Content="Delete"                                                   />
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Button -->
            <Button x:ConnectionId='3' Style="{StaticResource AccentButtonStyle}" Content="Quay lại" Background="Green"
                Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                HorizontalAlignment="Left" Grid.Row="3"                              />
        </Grid>
    </ScrollViewer>
</Page>

